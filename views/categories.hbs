<div class="container" style="margin-top: 2rem;">
    <h2 style="font-family: Lato, sans-serif;margin-bottom: 1rem;">Add Categories.</h2>
    <div class="row">
        <div class="col-md-4" style="margin-bottom: 2rem;">
            <form action="/users/category" method="post">
                <input class="form-control" type="number" name="categoryId" placeholder="Enter Category ID." style="font-family: Roboto, sans-serif;margin-top: 10px;margin-bottom: 5px;" />
                <input class="form-control" type="text" name="categoryName" placeholder="Enter Category Name." style="font-family: Roboto, sans-serif;margin-bottom: 10px;" />
                <div class="d-grid">
                    <button class="btn btn-primary btn-sm d-md-flex justify-content-md-center align-items-md-center" type="submit" style="font-family: Roboto, sans-serif;background: #0051ba;font-size: 17px;letter-spacing: .4px;border-style: none;">Add Category</button>
                </div>
            </form>
            {{#if message }}
                <p style="color: #d30547;font-family: Lato, sans-serif;font-size: 16px;"><i class="icon-close" style="font-weight: bold;font-size: 17px;"></i>  {{message}}</p>
            {{/if}}
        </div>
        <div class="col-md-7 offset-md-1">
            <div class="table-responsive">
                <table class="table">
                    <thead style="font-family: Lato, sans-serif;">
                        <tr>
                            <th>Category ID</th>
                            <th>Category Name</th>
                            <th>No. of Books</th>
                        </tr>
                    </thead>
                    <tbody style="font-family: Roboto, sans-serif;">
                        {{#each contents}}
                            <tr>
                                <td>{{ this.categoryId }}</td>
                                <td>{{ this.categoryName }}</td>
                                <td>6</td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>