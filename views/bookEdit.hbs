<div class="container" style="margin-top: 2rem;">
    <div class="row">
        <div class="col-md-12 col-lg-8 offset-lg-2" style="box-shadow: rgba(0, 0, 0, 0.1) 0px 10px 15px -3px, rgba(0, 0, 0, 0.05) 0px 4px 6px -2px;;border-radius: 3px;background: rgb(255, 255, 255)">
            <h1 style="margin-top: 10px;text-align: center;font-family: Lato, sans-serif;">Update a book.</h1>
            <form action="/library/book/edit/{{bookDetails._id}}" method="post" style="margin-top: 1.2rem;margin-bottom: 1.2rem;">
                <div class="row">
                    <div class="col-sm-6 col-md-5 offset-md-1">
                        <div class="form-group mb-3"><label class="form-label" style="font-family: Lato, sans-serif;">ISBN No.</label><input class="form-control" type="number" placeholder="Enter ISBN Number" style="font-family: Roboto, sans-serif;" name="ISBN" value="{{bookDetails.ISBN}}" readonly/></div>
                    </div>
                    <div class="col-sm-6 col-md-5 offset-md-0">
                        <div class="form-group mb-3"><label class="form-label" style="font-family: Lato, sans-serif;">Book Title</label><input class="form-control" type="text" placeholder="Enter Book Title" style="font-family: Roboto, sans-serif;" name="bookTitle" value="{{bookDetails.bookTitle}}" /></div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4 col-md-2 col-lg-3 offset-md-1">
                        <div class="form-group mb-3"><label class="form-label">Publication Year</label><input class="form-control" type="number" name="publicationYear" placeholder="Year of Publication" style="font-family: Roboto, sans-serif;" value="{{bookDetails.publicationYear}}"/></div>
                    </div>
                    <div class="col-sm-4 col-md-2 col-lg-4 offset-md-1 offset-lg-0">
                        <div class="form-group mb-3"><label class="form-label">Author</label><input class="form-control" type="text" name="author" placeholder="Book&#39;s Author" style="font-family: Roboto, sans-serif;" value="{{bookDetails.author}}"/></div>
                    </div>
                    <div class="col-sm-4 col-md-2 col-lg-3 offset-md-1 offset-lg-0">
                        <div class="form-group mb-3"><label class="form-label">Language</label><input class="form-control" type="text" name="language" placeholder="Book&#39;s Language" style="font-family: Roboto, sans-serif;" value="{{bookDetails.language}}"/></div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6 col-md-5 offset-md-1">
                        <div class="form-group mb-3">
                            <label class="form-label" style="font-family: Lato, sans-serif;">Category</label>
                            <select class="form-select" style="font-family: Roboto, sans-serif;" name="categoryId">
                                <option value="12" disabled="disabled" selected>Select a Category</option>
                                {{#each catResult}}
                                <option value="{{ this.categoryId }}">{{ this.categoryName }}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-6 col-md-5 offset-md-0">
                        <div class="form-group mb-3">
                            <label class="form-label" style="font-family: Lato, sans-serif;">Publication</label>
                            <select class="form-select" style="font-family: Roboto, sans-serif;" name="publicationId">
                                <option value="12" disabled="disabled" selected>Select a Publisher</option>
                                {{#each pubResult}}
                                <option value="{{ this.publicationId }}">{{ this.publicationName }}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6 col-md-5 offset-md-1">
                        <div class="form-group mb-3"><label class="form-label" style="font-family: Lato, sans-serif;">Copies of Book</label><input class="form-control" type="number" placeholder="Number of Copies" style="font-family: Roboto, sans-serif;" name="noCopies" value="{{bookDetails.noCopies}}"/></div>
                    </div>
                    <div class="col-sm-6 col-md-5 offset-md-0">
                        <div class="form-group mb-3"><label class="form-label" style="font-family: Lato, sans-serif;">Copies Present</label><input class="form-control" type="number" placeholder="Number of Copies Present" style="font-family: Roboto, sans-serif;" name="currentCopies" value="{{bookDetails.currentCopies}}"/></div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 col-lg-10 offset-lg-1">
                        <div class="form-group mb-3"><label class="form-label">About the Book</label><textarea type="text" class="form-control" name="bookInfo">{{bookDetails.bookInfo}}</textarea></div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 col-lg-6 offset-lg-3 d-grid"><button class="btn btn-primary" type="submit" style="font-family: Poppins, sans-serif;background: #0a6dde;">Update Book</button></div>
                </div>
            </form>
        </div>
    </div>
    <div style="text-align: center;margin-top: 2rem;margin-bottom: 2rem;"><a href="#bookSection" style="font-family: Roboto, sans-serif;">See Updated Book</a></div>
</div>